
<div class="container-fluid w-100 text-center mt-5 px-5">
  <div class="header py-5 ">
    <h2>Welcome to the <em>LONGEST</em> word game!</div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="m-5 mb-0 align-center">
      <% @randletters.each do |letter| %>
        <div class="box text-center"><%= letter %></div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <form class="form-group row m-5" action="/score" method="POST" data-turbo="false">
      <input class="input-group" type="text" name="word">
      <input class="button mt-2" type="submit" value="Play!">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @randletters %>
    </form>
  </div>

</div>
